                        <i class="nav-icon fas fa-file-circle-exclamation"></i>
                        <p>
                            Entrance Examinations
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview ml-2">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Exam" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>View Exam List</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Create" asp-controller="Exam" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Create Exam</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="DetailsList" asp-controller="Exam" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>View Exam Details List</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="CreateDetails" asp-controller="Exam" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Create Exam Details</p>
                            </a>
                        </li>
                    </ul>
                </li>


                @if (User.IsInRole("Main") || User.IsInRole("Finance"))
                {
                    <!--Payments-->
                    <li class="nav-item has-treeview">
                        <a href="" class="nav-link">
                            <i class="nav-icon fas fa-receipt"></i>
                            <p>
                                Payments
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview ml-2">
                            <li class="nav-item">
                                <a asp-action="Index" asp-controller="Payment" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>View Payment List</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="Create" asp-controller="Payment" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Create Payment</p>
