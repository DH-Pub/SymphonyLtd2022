@{
    @using System.Security.Claims;
    var adminId = User.Claims.FirstOrDefault(a => a.Type == "id").Value;
    string adminName = User.Claims.FirstOrDefault(a => a.Type == ClaimTypes.Name).Value;
}
<!-- Use Authorization -->

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a asp-action="Index" asp-controller="Home" class="brand-link">
        @*<img src="~/lib/admin-lte/img/AdminLTELogo.png"
        alt="Product Demo"
        class="brand-image img-circle elevation-3"
        style="opacity: .8">*@
        <span class="brand-text font-weight-light">Symphony BackEnd</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/lib/admin-lte/img/AdminLTELogo.png" class="img-circle elevation-2" alt="Admin">
            </div>
            <div class="info">
                <a href="#" class="d-block">@adminName</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="true">

                <!-- Admin -->
                <li class="nav-item has-treeview">
                    <a href="" class="nav-link">
                        <i class="nav-icon fas fa-lock fa-duotone"></i>
                        <p>
                            Admins
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview ml-2">

                        @if (User.IsInRole("Main"))
                        {
                            <li class="nav-item">
                                <a asp-action="Index" asp-controller="Admin" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>View Admin List</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="Create" asp-controller="Admin" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Create an Admin</p>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a asp-action="Details" asp-controller="Admin" asp-route-id="@adminId" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Personal Details</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Update" asp-controller="Admin" asp-route-id="@adminId" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Update Personal Details</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="UpdatePassword" asp-controller="Admin" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Update Passwords</p>
                            </a>
                        </li>
                    </ul>
                </li>

                <!--Courses-->
                <li class="nav-item has-treeview">
                    <a href="" class="nav-link">
                        <i class="nav-icon fas fa-book"></i>
                        <p>
                            Courses
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview ml-2">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Course" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>View Course List</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Create" asp-controller="Course" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Create Course</p>
                            </a>
                        </li>
                    </ul>
                </li>

                <!--Classes-->
                <li class="nav-item has-treeview">
                    <a href="" class="nav-link">
                        <i class="nav-icon fas fa-chalkboard"></i>
                        <p>
                            Classes
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview ml-2">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Class" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>View Class List</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Create" asp-controller="Class" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Create Classes</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="DetailsList" asp-controller="Class" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Class Details List</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="CreateDetails" asp-controller="Class" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Create Class Details</p>
                            </a>
                        </li>
                    </ul>
                </li>

                <!--Exams-->
