                <!-- FAQ -->
                <li class="nav-item has-treeview">
                    <a href="" class="nav-link">
                        <i class="nav-icon fa fa-question-circle" aria-hidden="true"></i>
                        <p>
                            FAQ's
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview ml-2">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="FAQ" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>View FAQ list</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Create" asp-controller="FAQ" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Create new FAQ</p>
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- About -->
                <li class="nav-item has-treeview">
                    <a href="" class="nav-link">
                        <i class="nav-icon fa fa-info-circle" aria-hidden="true"></i>
                        <p>
                            About Us
                            <i class="right fas fa-angle-left"></i>
