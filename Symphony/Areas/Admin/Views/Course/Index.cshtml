@model IEnumerable<Symphony.Areas.Admin.Models.CourseModel>

@{
    ViewData["Title"] = "Course Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<span class="text-danger">@TempData["err"]</span>
<table id="course" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsNew)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td style="max-width: 200px">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="max-width: 665px">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsNew)
                </td>
                <td>
                    <a href="@Url.Action("Details", "Course", new { id=item.Id })" class="btn btn-secondary">
                        <i class='fa fa-info-circle' aria-hidden='true'></i>
                    </a>
                    <a href="@Url.Action("Update", "Course", new { id=item.Id })" class="btn btn-secondary">
                        <i class='fa fa-pencil-square' aria-hidden='true'></i>
                    </a>
                    <a href="@Url.Action("Delete", "Course", new { id=item.Id })" onclick="return confirm('Do you want to delete this course ?')" class="btn btn-secondary">
                        <i class='fa fa-trash' aria-hidden='true'></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(() => {
            $('#course').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                order: [[0, 'desc']],
            })
        })
    </script>
}