<div class="container">
    <div class="course">
        <div class="course-title">
            <h3 class="text-center">Our courses</h3>
        </div>
        <div class="course-container">
            @foreach (var item in Model)
            {
                <div class="course-item">
                <div class="card">
                    <img src="~/images/jael-vallee-8WPisO0NZmg-unsplash.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                        @Html.ActionLink("Details", "Index", "Course", new { id=item.Id })
                        @*<a class="" asp-area="Student" asp-controller="Course" asp-action="Index">
                            <span>Detail</span>
                            <i class="fa fa-arrow-right" aria-hidden="true"></i>
                        </a>*@
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
