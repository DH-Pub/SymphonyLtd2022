<div class="container">
    <div class="course">
        <div class="course-title">
            <h3 class="text-center">Our courses</h3>
        </div>
        <div class="course-container">
            @foreach (var item in Model.Take(3))
            {
                <div class="course-item">
                    <div class="card">
                        @*<img src="~/images/javascript.jpg" class="card-img-top" alt="...">*@
                        <div class="card-body">
                            <div class="card-top d-flex justify-content-between align-items-center">
                                <h5 class="card-title">@(item.Name)</h5>
                                @Html.ActionLink("➡", "Detail", "Course", new { id=item.Id }, new {@class = "card-link"})
                            </div>
                            <p class="card-text">@(item.Description)</p>
                            @*<a class="" asp-area="Student" asp-controller="Course" asp-action="Index">
                        <span>Detail</span>
                        <i class="fa fa-arrow-right" aria-hidden="true"></i>
                        </a>*@
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="course">
        <div class="course-title">
            <h3 class="text-center">New courses</h3>
        </div>
        <div class="course-container">
            @foreach (var item in Model.Where(c => c.IsNew == true).Take(3))
            {
                <div class="course-item">
                    <div class="card">
                        @*<img src="~/images/javascript.jpg" class="card-img-top" alt="...">*@
                        <div class="card-body">
                            <div class="card-top d-flex justify-content-between align-items-center">
                                <h5 class="card-title">@(item.Name)</h5>
                                @Html.ActionLink("➡", "Detail", "Course", new { id=item.Id }, new {@class = "card-link"})
                            </div>
                            <p class="card-text">@(item.Description)</p>
                            @*<a class="" asp-area="Student" asp-controller="Course" asp-action="Index">
                        <span>Detail</span>
                        <i class="fa fa-arrow-right" aria-hidden="true"></i>
                        </a>*@
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
