@model IEnumerable<Symphony.Areas.Admin.Models.CentreModel>
@{
    ViewData["Title"] = "Contact us";
}
<div class="banner-container py-5 mb-5">
    <div class="container py-3">
        <div class="banner d-flex justify-content-between">
            <h4 class="banner-left">
                Contact us
            </h4>
            <div class="banner-right">
                <a class="banner-link mr-3" asp-area="" asp-controller="Home" asp-action="Index">
                    Homepage
                </a>
                >
                <span class="ml-3">Contact us</span>
            </div>
        </div>
    </div>
</div>
<div class="container mb-5">
    <div class="course-title">
      <h3 class="text-center">Contact & Find</h3>
    </div>
    <div class="contact-container">
        <div class="contact-item p-2">
        @foreach (var item in Model)
        {
            <div class="contact-info">
                <h4 class="contact-title">
                    @(item.Name)
                </h4>
                <div class="contact-desc contact-label">
                    <p>@(item.Details)</p>
                </div>
                <div class="contact-details">
                    <div class="contact-phone">
                        <span class="contact-label">Phone:</span>
                        <span class="ml-1">@(item.Phone)</span>
                    </div>
                    <div class="contact-mail">
                        <span class="contact-label">Address:</span>
                        <span class="ml-1">@(item.Address)</span>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
</div>