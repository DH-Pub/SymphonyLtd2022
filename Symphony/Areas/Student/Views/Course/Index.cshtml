@model Symphony.Areas.Admin.Models.CourseModel

<div class="banner-container py-5 mb-5">
    <div class="container py-3">
        <div class="banner d-flex justify-content-between">
            <h4 class="banner-left">
                @(Model.Name)
            </h4>
            <div class="banner-right">
                <a class="banner-link mr-3" asp-area="" asp-controller="Home" asp-action="Index">
                    Homepage
                </a>
                >
                <span class="ml-3">@(Model.Name)</span>
            </div>
        </div>
    </div>
</div>
<div class="container mb-5">
    <div class="row">
        <div class="col-12 mb-3">
            <div class="course-image">
                @*<img style="width: 100%; height: 700px" src="~/images/jael-vallee-8WPisO0NZmg-unsplash.jpg" />*@
            </div>
        </div>
        <div class="col-12">
            <h4>@(Model.Name)</h4>
        </div>
        <div class="col-12">
            <p>@(Model.Description)</p>
        </div>
    </div>
</div>